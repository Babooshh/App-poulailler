<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App_poulailler.MainPage"
             BackgroundColor="{StaticResource Gray200}">

    <VerticalStackLayout
        Padding="30,0"
        Spacing="25"
        VerticalOptions="Center">

        <HorizontalStackLayout HorizontalOptions="Center">
            <Label Text="Fermer" VerticalOptions="Center"/>
            <Switch x:Name="Interrupteur"
                    Toggled="OnInterrupteurToggled"
                    ThumbColor="Red"
                    OnColor="Green"
                    />
            <Label Text="Ouvrir" VerticalOptions="Center"/>
        </HorizontalStackLayout>

        <Grid ColumnDefinitions="*,*" RowDefinitions="Auto">
            <Label Text="Catégorie Intérieur" Grid.Column="0" FontAttributes="Bold" HorizontalOptions="Center" />
            <Label Text="Catégorie Extérieur" Grid.Column="1" FontAttributes="Bold" HorizontalOptions="Center" />
        </Grid>
    </VerticalStackLayout>

</ContentPage>
