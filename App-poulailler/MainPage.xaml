    <Border Stroke="{StaticResource Gray300}" StrokeThickness="1" Background="White" StrokeShape="RoundRectangle 20" Padding="18" Shadow="5,5,10,Black,0.2" Margin="0,0,0,20">
        <VerticalStackLayout Spacing="16">
            <Label Text="Programmation automatique" FontSize="22" FontAttributes="Bold" TextColor="{StaticResource Primary}" HorizontalOptions="Center"/>
            <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto" ColumnSpacing="12" RowSpacing="12">
                <Label Text="Heure d'ouverture :" Grid.Row="0" Grid.Column="0" VerticalOptions="Center"/>
                <TimePicker x:Name="TimePickerOuverture" x:FieldModifier="public" Grid.Row="0" Grid.Column="1"/>
                <Label Text="Heure de fermeture :" Grid.Row="1" Grid.Column="0" VerticalOptions="Center"/>
                <TimePicker x:Name="TimePickerFermeture" x:FieldModifier="public" Grid.Row="1" Grid.Column="1"/>
            </Grid>
            <Button Text="Enregistrer la programmation" Clicked="OnSaveScheduleClicked" Margin="0,10,0,0"/>
        </VerticalStackLayout>
    </Border>
