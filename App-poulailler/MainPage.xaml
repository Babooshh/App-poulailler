<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App_poulailler.MainPage"
             BackgroundColor="{StaticResource Gray200}">

    <VerticalStackLayout
        Padding="30,40"
        Spacing="30"
        VerticalOptions="Center">

        <Border Stroke="{StaticResource Gray300}" StrokeThickness="1" Background="White" StrokeShape="RoundRectangle 20" Margin="0,0,0,20" Padding="24" Shadow="5,5,10,Black,0.2">
            <VerticalStackLayout Spacing="20">
                <Label Text="Contrôle de la porte" FontSize="28" FontAttributes="Bold" TextColor="{StaticResource Primary}" HorizontalOptions="Center"/>
                <HorizontalStackLayout HorizontalOptions="Center" Spacing="16">
                    <Label Text="Fermer" VerticalOptions="Center" FontSize="18"/>
                    <Switch x:Name="Interrupteur"
                            Toggled="OnInterrupteurToggled"
                            ThumbColor="Red"
                            OnColor="Green"
                            Scale="1.3"/>
                    <Label Text="Ouvrir" VerticalOptions="Center" FontSize="18"/>
                </HorizontalStackLayout>
            </VerticalStackLayout>
        </Border>

        <Border Stroke="{StaticResource Gray300}" StrokeThickness="1" Background="White" StrokeShape="RoundRectangle 20" Padding="18" Shadow="5,5,10,Black,0.2">
            <Grid ColumnDefinitions="*,*" RowDefinitions="Auto">
                <Label Text="Catégorie Intérieur" Grid.Column="0" FontAttributes="Bold" HorizontalOptions="Center" FontSize="20" TextColor="{StaticResource PrimaryDarkText}"/>
                <Label Text="Catégorie Extérieur" Grid.Column="1" FontAttributes="Bold" HorizontalOptions="Center" FontSize="20" TextColor="{StaticResource PrimaryDarkText}"/>
            </Grid>
        </Border>
    </VerticalStackLayout>

</ContentPage>
